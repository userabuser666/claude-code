{
  "manifest_version": 3,
  "name": "SOCKS Connection Monitor",
  "version": "1.0.0",
  "description": "Monitor your SOCKS proxy connection status in real-time",
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "http://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "SOCKS Connection Monitor"
  },
  "options_page": "settings.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
